{
  "extends": "./tsconfig.base.json",
  "include": [
    "e/web/**/*.ts",
    "e/web/**/*.tsx",
    "e/web/**/*.js",
    "e/web/**/*.jsx",
    "web/**/*.ts",
    "web/**/*.tsx",
    "web/**/*.js",
    "web/**/*.jsx",
    "../web/src/**/*.ts",
    "../web/src/**/*.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./web/packages/design/tsconfig.json"
    }
  ],
  "exclude": [
    "web/packages/design",
    "node_modules",
    "**/node_modules/*",
    "dist",
    "**/dist/*",
    "**/build/app/**",
    "**/build/release/**"
  ]
}
